# Application Settings
APP_NAME=Lumora Mental Health API
APP_VERSION=1.0.0
DEBUG=True

# Database Configuration
# SQLite (default for development)
DATABASE_URL=sqlite:///./lumora.db

# PostgreSQL (recommended for production)
# DATABASE_URL=postgresql://username:password@localhost:5432/lumora_db

# Security Settings
SECRET_KEY=your-secret-key-change-this-in-production-use-long-random-string
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# Machine Learning Models
MODEL_PATH=saved_models/logistic_model.pkl
ENCODERS_PATH=saved_models/label_encoders.pkl

# SMTP Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
SMTP_FROM_EMAIL=your-email@gmail.com
SMTP_FROM_NAME=Lumora Mental Health

# Alert Configuration
HIGH_RISK_THRESHOLD=0.7
ALERT_EMAIL_ENABLED=false

# OpenAI Configuration (Optional - for chatbot)
OPENAI_API_KEY=sk-your-openai-api-key-here
CHATBOT_MODEL=gpt-3.5-turbo
CHATBOT_MAX_TOKENS=500
CHATBOT_TEMPERATURE=0.7

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080
